@using IH.DrugStore.Web.Models.DrugTypes
@model IEnumerable<DrugTypeViewModel>

@{
    ViewData["Title"] = "Drug Types";
}

<h1>Drug Types</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">Create New Drug Type</a>
</p>
<hr />

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drugType in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => drugType.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@drugType.Id" class="text-decoration-none">
                        <i class="fa-solid fa-circle-info text-info" title="Details"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@drugType.Id" title="Edit" class="text-decoration-none ms-2">
                        <i class="fa-solid fa-pencil text-primary"></i>
                    </a>
                    <a data-bs-toggle="modal" data-bs-target="#deleteModal_@drugType.Id" title="Delete" class="text-decoration-none ms-2">
                        <i class="fa-solid fa-trash text-danger"></i>
                    </a>
                </td>
            </tr>


            <div class="modal fade" id="deleteModal_@drugType.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Delete DrugType</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h3>Are you sure you want to delete <span class="text-danger">@drugType.Name</span>?</h3>
                            <h3><span class="fw-bold">PLEASE NOTE:</span> Deleting the DrugType will delete all the Drugs under it.</h3>
                        </div>
                        <div class="modal-footer">

                            <form asp-action="Delete" asp-route-id="@drugType.Id">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>



        }
    </tbody>
</table>

@using IH.DrugStore.Web.Models.DrugTypes
@model DrugTypeDetailsViewModel
@{
    ViewData["Title"] = $"Details - {Model.Name}";
}
<h1>
    Details
    <span class="text-primary">@Model.Name</span>
</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<hr class="mt-3" />
<h3>Drugs</h3>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Barcode</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drug in Model.Drugs)
        {
            <tr>
                <td>@drug.Name</td>
                <td>@drug.Price</td>
                <td>@drug.BarCode</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-primary ms-1" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>

<h1>Create a Drug</h1>
<hr />
<form>
    <div class="mb-3">
        <label for="drugName" class="form-label">Drug Name</label>
        <input type="text" class="form-control" id="drugName" placeholder="Enter drug name">
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" id="price" placeholder="Enter the price">
    </div>
    <div class="mb-3">
        <label for="notes" class="form-label">Notes</label>
        <textarea class="form-control" id="notes" rows="3"></textarea>
    </div>
   
    <a asp-controller="Drugs" asp-action="Index" class="btn btn-secondary">Cancel</a>

    <button class="btn btn-primary ms-2" type="submit">Create</button>
</form>
